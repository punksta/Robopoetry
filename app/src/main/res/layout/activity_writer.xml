<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sheme_backbround"
    tools:context="com.punksta.apps.robopoetry.screens.writer.WriterActivity">


    <com.punksta.apps.robopoetry.BottomLeftCornerView
        app:strokeWidth="1.5dp"
        android:layout_alignBottom="@+id/filter_by_name"
        app:data="30,5; 35,10"
        app:color="@color/threadColor"
        android:layout_width="40dp"
        android:layout_height="match_parent" />

    <com.punksta.apps.robopoetry.BottomLeftCornerView
        app:strokeWidth="1.5dp"
        app:data="25,20; 20,15; 15,10; 10,5"
        android:layout_alignBottom="@+id/screen"
        app:color="@color/threadColor"
        android:layout_width="40dp"
        android:layout_height="match_parent" />

    <com.punksta.apps.robopoetry.BottomLeftCornerView
        android:layout_width="30dp"
        android:layout_marginEnd="-10dp"
        android:layout_toStartOf="@+id/stop_button"
        android:layout_alignBottom="@+id/filter_by_name"
        app:strokeWidth="1.5dp"
        app:data="13.5,10; 18.5,15"
        app:color="@color/threadColor"
        android:layout_height="150dp" />



    <Button
        android:id="@+id/stop_button"
        android:text="@string/button_stop"
        android:textSize="16sp"
        android:fontFamily="@font/clacon_normal"
        android:layout_alignTop="@+id/filter_by_name"
        android:layout_alignParentEnd="true"
        android:typeface="monospace"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/filter_by_name"
        android:layout_alignEnd="@+id/filter_by_name"
        android:layout_alignStart="@+id/filter_by_name"
        android:layout_alignTop="@+id/filter_by_name"

        android:background="@drawable/terminal_corners"


        android:scaleType="centerCrop"
        android:src="@drawable/terminal_background" />

    <EditText
        android:id="@+id/filter_by_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_toStartOf="@+id/stop_button"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="29dp"
        android:background="@android:color/transparent"
        android:hint="@string/search"
        android:fontFamily="@font/clacon_normal"
        android:inputType="text|textFilter"
        android:lines="1"
        android:paddingEnd="16dp"
        android:paddingStart="16dp" />




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/screen"
        android:layout_alignEnd="@+id/screen"
        android:layout_alignStart="@+id/screen"
        android:layout_alignTop="@+id/screen"
        android:layout_marginBottom="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/terminal_background" />


    <LinearLayout
        android:id="@+id/screen"
        android:layout_below="@+id/filter_by_name"
        android:layout_above="@+id/speakers"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/poems_items"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clipToPadding="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingTop="14dp" />


    </LinearLayout>


    <com.punksta.apps.robopoetry.screens.common.SpeackersView
        android:id="@+id/speakers"
        android:clipToPadding="false"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
